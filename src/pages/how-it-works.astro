import { getEntry, render } from 'astro:content';
import ServicePillarLayout from '../layouts/ServicePillarLayout.astro';

// Load content from collection
const entry = await getEntry('pages', 'how-it-works');

if (!entry) {
  throw new Error('Content not found at content/pages/how-it-works.md');
}

const { Content } = await render(entry);
const frontmatter = entry.data;
---

