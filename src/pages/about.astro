---
/**
 * src/pages/about.astro
 * Route: /about
 * Content source: content/pages/about.md
 * Layout: ServicePillarLayout (used for general content pages)
 * Task 7.2.3 - Content wiring complete
 */

import { getEntry, render } from 'astro:content';
import ServicePillarLayout from '../layouts/ServicePillarLayout.astro';

// Load content from collection
const entry = await getEntry('pages', 'about');

if (!entry) {
  throw new Error('Content not found at content/pages/about.md');
}

const { Content } = await render(entry);
const frontmatter = entry.data;
---

<ServicePillarLayout frontmatter={frontmatter}>
  <Content />
</ServicePillarLayout>
