---
/**
 * Hero.astro
 * Reusable hero section component
 * Used by multiple layouts with different styling variants
 */

interface Props {
  title?: string;
  subtitle?: string;
  eyebrow?: string;
  ctaLabel?: string;
  ctaHref?: string;
  secondaryCtaLabel?: string;
  secondaryCtaHref?: string;
  variant?: 'default' | 'home' | 'geo' | 'guide' | 'contact';
  backgroundImage?: string;
}

const {
  title = '',
  subtitle = '',
  eyebrow = '',
  ctaLabel = '',
  ctaHref = '/contact',
  secondaryCtaLabel = '',
  secondaryCtaHref = '',
  variant = 'default',
  backgroundImage = '',
} = Astro.props;
---

<section class:list={['hero', `hero--${variant}`]} style={backgroundImage ? `background-image: url(${backgroundImage})` : ''}>
  <div class="hero-container">
    {eyebrow && <p class="hero-eyebrow">{eyebrow}</p>}
    
    <h1 class="hero-title">
      {title || <slot name="title" />}
    </h1>
    
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    
    <slot name="content" />
    
    {(ctaLabel || secondaryCtaLabel) && (
      <div class="hero-actions">
        {ctaLabel && (
          <a href={ctaHref} class="btn btn-primary">{ctaLabel}</a>
        )}
        {secondaryCtaLabel && (
          <a href={secondaryCtaHref} class="btn btn-secondary">{secondaryCtaLabel}</a>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-bg-white);
  }
  
  .hero-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }
  
  .hero-eyebrow {
    color: var(--color-teal-deep);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-sm);
  }
  
  .hero-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
    max-width: 800px;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-dark);
    opacity: 0.9;
    max-width: 700px;
    margin-bottom: var(--spacing-lg);
    line-height: 1.5;
  }
  
  .hero-actions {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }
  
  /* Home variant - larger, centered */
  .hero--home {
    text-align: center;
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
    background: linear-gradient(to bottom, var(--color-bg-white) 0%, var(--color-bg-warm) 100%);
  }
  
  .hero--home .hero-container {
    max-width: 900px;
  }
  
  .hero--home .hero-title {
    font-size: 2.75rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero--home .hero-subtitle {
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero--home .hero-actions {
    justify-content: center;
  }
  
  /* GEO variant - with local context */
  .hero--geo {
    background-color: var(--color-teal-deep);
    color: white;
  }
  
  .hero--geo .hero-eyebrow {
    color: var(--color-teal-light);
  }
  
  .hero--geo .hero-title {
    color: white;
  }
  
  .hero--geo .hero-subtitle {
    color: white;
    opacity: 0.95;
  }
  
  /* Guide variant - article style */
  .hero--guide {
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid #e5e5e5;
  }
  
  .hero--guide .hero-title {
    font-size: 2.25rem;
  }
  
  /* Contact variant - simple and inviting */
  .hero--contact {
    text-align: center;
    padding: var(--spacing-xl) 0;
  }
  
  .hero--contact .hero-container {
    max-width: 700px;
  }
  
  .hero--contact .hero-title {
    font-size: 2rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .hero--home .hero-title {
      font-size: 2.25rem;
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
  }
</style>
